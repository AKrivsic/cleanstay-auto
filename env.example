# CleanStay AI - Environment Variables Template
# Copy this file to .env.local and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Supabase project URL (public)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase anonymous key (public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase service role key (SERVER ONLY - never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# OpenAI API key (SERVER ONLY)
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# WHATSAPP BUSINESS API CONFIGURATION
# =============================================================================
# WhatsApp Business API key (SERVER ONLY)
WABA_API_KEY=your_whatsapp_business_api_key

# WhatsApp Business API base URL
WABA_BASE_URL=https://waba.360dialog.io

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable CleanStay features
# staging: true/false (as needed)
# production: true
CLEANSTAY_ENABLED=true

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Environment identifier
NODE_ENV=development

# Application version (auto-set by CI/CD)
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Sentry DSN (for error tracking)
SENTRY_DSN=your_sentry_dsn

# Sentry environment
SENTRY_ENVIRONMENT=development

# =============================================================================
# SECURITY
# =============================================================================
# JWT secret for session management
JWT_SECRET=your_jwt_secret_key

# Webhook signature secret
WEBHOOK_SECRET=your_webhook_signature_secret

# =============================================================================
# DATABASE
# =============================================================================
# Database connection string (if using direct connection)
DATABASE_URL=your_database_connection_string

# =============================================================================
# STORAGE
# =============================================================================
# Supabase Storage bucket name
SUPABASE_STORAGE_BUCKET=cleanstay_media

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Email configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# =============================================================================
# COST LIMITS
# =============================================================================
# Daily AI cost limit (EUR)
AI_DAILY_LIMIT_EUR=2.00

# Daily WhatsApp cost limit (EUR)
WHATSAPP_DAILY_LIMIT_EUR=5.00

# =============================================================================
# PILOT CONFIGURATION
# =============================================================================
# Pilot mode enabled
PILOT_MODE=true

# Pilot tenant ID (using valid UUID format)
PILOT_TENANT_ID=00000000-0000-0000-0000-000000000000

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Enable debug logging
DEBUG=false

# Log level
LOG_LEVEL=info

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Vercel deployment URL
VERCEL_URL=your_vercel_deployment_url

# Vercel environment
VERCEL_ENV=development