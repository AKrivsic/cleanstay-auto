  "approval_process": {
    "description": "Proces schválení WhatsApp šablon přes 360dialog",
    "steps": [
      "1. Nahrajte šablony přes 360dialog API nebo Business Manager",
      "2. Počkejte na schválení Meta (obvykle 24-48 hodin)",
      "3. Ověřte stav schválení přes API",
      "4. Testujte šablony v sandbox prostředí",
      "5. Aktivujte produkční použití"
    ],
    "api_endpoints": {
      "upload": "POST /v1/messages/templates",
      "status": "GET /v1/messages/templates/{template_id}",
      "test": "POST /v1/messages/templates/{template_id}/test"
    },
    "requirements": {
      "max_length": 320,
      "no_marketing": true,
      "clear_purpose": true,
      "user_opt_in": true
    }
  }
